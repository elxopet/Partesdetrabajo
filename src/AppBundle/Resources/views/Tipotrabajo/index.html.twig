{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Tipotrabajo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Tiempo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tipotrabajo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.tiempo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tipotrabajo_show', { 'id': entity.id }) }}"class="btn btn-default fa fa-eye"></a>
                    </li>
                    <li>
                        <a href="{{ path('tipotrabajo_edit', { 'id': entity.id }) }}"class="btn btn-default fa fa-edit"></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tipotrabajo_new') }}">
                Crear nueva entrada
            </a>
        </li>
    </ul>
    {% endblock %}

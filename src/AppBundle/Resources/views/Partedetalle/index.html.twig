{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Partedetalle list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Horainicio</th>
                <th>Horafin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('partedetalle_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.horainicio }}</td>
                <td>{{ entity.horafin }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('partedetalle_show', { 'id': entity.id }) }}"class="btn btn-default fa fa-eye"></a>
                    </li>
                    <li>
                        <a href="{{ path('partedetalle_edit', { 'id': entity.id }) }}"class="btn btn-default fa fa-edit"></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('partedetalle_new') }}">
                Crear nueva entrada
            </a>
        </li>
    </ul>
    {% endblock %}

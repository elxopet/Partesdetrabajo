{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea%}
    <h1>Lista de Clientes</h1>
	<div class="table-responsive">
    <table class="table table-condensed">
    
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Preciohora</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.preciohora }}</td>
                <td>
                        <a href="{{ path('cliente_show', { 'id': entity.id }) }}"class="btn btn-default fa fa-eye"></a>
                        <a href="{{ path('cliente_edit', { 'id': entity.id }) }}"class="btn btn-default fa fa-edit"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
            <a href="{{ path('cliente_new') }}">
                Crear nueva entrada
            </a>
    {% endblock %}
